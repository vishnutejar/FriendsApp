<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".views.frgs.FriendsDetailsFrag">

    <TextView
        android:id="@+id/txt_key_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_value_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/txt_key_fullName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_key_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:text="@string/address"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_key_fullName" />

    <TextView
        android:id="@+id/txt_value_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/txt_key_address"
        app:layout_constraintTop_toBottomOf="@+id/txt_value_fullName" />

    <TextView
        android:id="@+id/txt_key_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/email"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_key_address" />

    <TextView
        android:id="@+id/txt_value_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/txt_key_address"
        app:layout_constraintTop_toBottomOf="@+id/txt_value_address" />

    <TextView
        android:id="@+id/txt_key_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/phone"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_key_email" />

    <TextView
        android:id="@+id/txt_value_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/txt_key_phone"
        app:layout_constraintTop_toBottomOf="@+id/txt_value_email" />

</androidx.constraintlayout.widget.ConstraintLayout>